<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xxfin.tesinarecommendationsystem.ConfirmActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageOk"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/common_google_signin_btn_text_light"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/butonConfirmacion"
        android:layout_below="@id/imageOk"
        android:text="Ok"
        android:onClick="okConfirmar"/>

</RelativeLayout>
