<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xxfin.tesinarecommendationsystem.DetallesActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="10"
        android:columnCount="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/detallesMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            tools:context="com.example.xxfin.tesinarecommendationsystem.DetallesActivity" />

        <TextView
            android:id="@+id/nombreLugar"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="PlaceName"
            />

        <TextView
            android:id="@+id/direccionLugar"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="PlaceDirección"
            />

        <TextView
            android:id="@+id/ratingLugar"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="PlaceRating"
            />

        <TextView
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Otros usuarios también han visitado..."
            />

        <GridLayout
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/propuesta1">

            <ImageView
                android:id="@+id/imagen1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0" />

            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/nombre1"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/direccion1" />

        </GridLayout>

        <GridLayout
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/propuesta2">

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0" />

            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/nombre2"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/direccion2" />

        </GridLayout>

        <GridLayout
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/propuesta3">

            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0" />

            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/nombre3"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/direccion3" />

        </GridLayout>

        <GridLayout
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/propuesta4">

            <ImageView
                android:id="@+id/imagen4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0" />

            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/nombre4"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/direccion4" />

        </GridLayout>

        <GridLayout
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/propuesta5">

            <ImageView
                android:id="@+id/imagen5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0" />

            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/nombre5"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/direccion5" />

        </GridLayout>

    </GridLayout>

</RelativeLayout>
