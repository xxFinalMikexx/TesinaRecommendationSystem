<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xxfin.tesinarecommendationsystem.DetallesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="10"
            android:columnCount="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/detallesMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                tools:context="com.example.xxfin.tesinarecommendationsystem.DetallesActivity" />

            <TextView
                android:id="@+id/nombreLugar"
                android:layout_height="25dp"
                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="PlaceName"
                />

            <TextView
                android:id="@+id/direccionLugar"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="PlaceDirección"
                />

            <TextView
                android:id="@+id/ratingLugar"
                android:layout_height="20dp"
                android:layout_width="match_parent"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="PlaceRating"
                />

            <TextView
                android:layout_height="25dp"
                android:layout_width="match_parent"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Otros usuarios también han visitado..."
                />

            <GridLayout
                android:id="@+id/propuesta1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="5"
                android:columnCount="2"
                android:rowCount="3">

                <ImageView
                    android:id="@+id/imagen1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="3" />

                <TextView
                    android:id="@+id/nombre1"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="0" />

                <TextView
                    android:id="@+id/direccion1"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1" />

            </GridLayout>

            <GridLayout
                android:id="@+id/propuesta2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="6"
                android:columnCount="2"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/imagen2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="3" />

                <TextView
                    android:id="@+id/nombre2"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="0" />

                <TextView
                    android:id="@+id/direccion2"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1" />

            </GridLayout>

            <GridLayout
                android:id="@+id/propuesta3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="7"
                android:columnCount="2"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/imagen3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="3" />

                <TextView
                    android:id="@+id/nombre3"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="0" />

                <TextView
                    android:id="@+id/direccion3"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1" />

            </GridLayout>

            <GridLayout
                android:id="@+id/propuesta4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="8"
                android:columnCount="2"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/imagen4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="3" />

                <TextView
                    android:id="@+id/nombre4"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="0" />

                <TextView
                    android:id="@+id/direccion4"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1" />

            </GridLayout>

            <GridLayout
                android:id="@+id/propuesta5"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="9"
                android:columnCount="2"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/imagen5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="3" />

                <TextView
                    android:id="@+id/nombre5"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="0" />

                <TextView
                    android:id="@+id/direccion5"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1" />

            </GridLayout>

        </GridLayout>
    </ScrollView>

</RelativeLayout>
