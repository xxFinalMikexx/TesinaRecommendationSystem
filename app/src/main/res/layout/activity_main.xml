<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xxfin.tesinarecommendationsystem.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="7">

        <ImageView
            android:id="@+id/imagenLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_columnWeight="5"
            android:layout_row="0" />

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_columnWeight="5"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:text="@string/Informacion"
            android:textColor="@color/black"
            android:textAlignment="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="5"
            android:layout_columnSpan="5"
            android:rowCount="1"
            android:columnCount="6">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                />

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_row="0"
                />

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                />

            <ImageView
                android:id="@+id/icon6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                />

        </GridLayout>

        <ImageView
            android:id="@+id/enviarAporte"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:layout_row="4"
            android:onClick="enviarAporte" />

        <ImageView
            android:id="@+id/buscarRecomendacion"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="35dp"
            android:layout_row="4"
            android:onClick="buscarRecomendacion" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_marginLeft="45dp"
            android:textAlignment="center"
            android:text="Aportación"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            android:textAlignment="center"
            android:text="Recomendación"/>

        <TextView
            android:id="@+id/salir"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="100dp"
            android:text="Salir"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:onClick="signOut"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="cargarUsuariosPrueba"
            android:text="Cargar usuarios prueba"
            android:visibility="gone" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="cargarAportesPrueba"
            android:text="Cargar Aportes"
            android:visibility="gone" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="cargarAsociaciones"
            android:text="Cargar Asociaciones"
            android:visibility="gone" />

    </GridLayout>

</LinearLayout>
